{
  "name": "graphit",
  "displayName": "GraphIt",
  "description": "Visualize your repo instantlyâ€”effortless code graphing for seamless vibe coding.",
  "version": "0.0.1",
  "publisher": "chenyusu",
  "repository": {
    "type": "git",
    "url": "https://github.com/LEE-CHENYU/graphit"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "graphit.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "graphit.showRepoFlowchart",
        "title": "GraphIt: Show Repository Flowchart"
      },
      {
        "command": "graphit.showHelloSiliconCreature",
        "title": "GraphIt: Hello Silicon Creature"
      }
    ],
    "keybindings": [
      {
        "command": "graphit.showRepoFlowchart",
        "key": "cmd+g cmd+g",
        "mac": "cmd+g cmd+g",
        "win": "ctrl+g ctrl+g",
        "linux": "ctrl+g ctrl+g",
        "when": "editorTextFocus || !inputFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.3"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  }
}
